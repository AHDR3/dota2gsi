{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext", 
        "outDir": "./lib/esm", 
        "rootDir": "./tsc", 
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "exclude": [
        "__tests__/**/*.ts",
        "compiled/**/*.ts",
        "lib/**/*.ts",
        "./jest.config.ts"
    ],
}
